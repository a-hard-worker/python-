# 导入sklearn的数据集和线性回归模块
from sklearn.datasets import load_boston
from sklearn.linear_model import LinearRegression

# 加载波士顿房价数据集
boston = load_boston()
X = boston.data # 特征变量
y = boston.target # 目标变量

# 创建线性回归模型对象
lr = LinearRegression()

# 用全部数据训练模型
lr.fit(X, y)

# 打印模型的截距和系数
print("Intercept:", lr.intercept_)
print("Coefficients:", lr.coef_)

# 用模型预测一个样本的房价
sample = X[0] # 第一个样本
prediction = lr.predict([sample]) # 预测结果
print("Prediction:", prediction)
print("Actual:", y[0])
